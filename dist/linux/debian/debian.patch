+
+#Architecture 
+build: build-arch build-indep
+
+build-arch: build-arch-stamp
+build-arch-stamp: #CONFIGURE_STAMP# #CONFIG_STATUS#
+
+	# build vulture-nethack
+	cd nethack && sh sys/unix/setup.sh 1
+	-@cd nethack/win && ln -s ../../vulture/ vulture
+	$(MAKE) -C nethack all
+
+	# build vulture-slashem
+	cd slashem && sh sys/unix/setup.sh 1
+	-@cd slashem/win && ln -s ../../vulture/ vulture
+	$(MAKE) -C slashem all
+
+	# build vulture-unnethack
+	cd unnethack && sh sys/unix/setup.sh 1
+	-@cd unnethack/win && ln -s ../../vulture/ vulture
+	$(MAKE) -C unnethack all
+
+build-indep: build-indep-stamp
+build-indep-stamp: #CONFIGURE_STAMP# #CONFIG_STATUS#
+	
+	# Add here commands to compile the indep part of the package.
+	#$(MAKE) doc
+
+clean:
+	dh_testdir
+	dh_testroot
+	rm -f build-arch-stamp build-indep-stamp config-stamp
+
+	# Add here commands to clean up after the build process.
+	-$(MAKE) -C nethack spotless
+	-$(MAKE) -C slashem spotless
+	-$(MAKE) -C unnethack spotless
+	-find nethack/ -name Makefile -print0 | xargs -r -0 rm
+	-find slashem/ -name Makefile -print0 | xargs -r -0 rm
+	-find unnethack/ -name Makefile -print0 | xargs -r -0 rm
+	-@rm -f nethack/win/vulture slashem/win/vulture unnethack/win/vulture
+	
+	# this file may be created during parallel make, remove it
+	-@rm -f vulture/vulture
+	
+	dh_clean
+
+install: install-indep install-arch
+
+install-indep:
+	dh_testdir
+	dh_testroot
+	dh_clean -k -i
+	dh_installdirs -i
+	
+	# Add here commands to install the indep part of the package into
+	# debian/<package>-doc.
+	#INSTALLDOC#
+
+	for file in vulture_intro.txt vulture_tiles.conf vulture_sounds.conf vulture.conf; \
+	do \
+	install -m 0644 -o root -g root vulture/gamedata/config/$$file \
+	  debian/vulture-data/usr/share/games/vulture/config/; \
+	done
+
+	install -m 0644 -o root -g root vulture/gamedata/tiles/* \
+	  debian/vulture-data/usr/share/games/vulture/tiles/
+										
+	install -m 0644 -o root -g root vulture/gamedata/graphics/* \
+	  debian/vulture-data/usr/share/games/vulture/graphics/
+										
+	install -m 0644 -o root -g root vulture/gamedata/music/* \
+	  debian/vulture-data/usr/share/games/vulture/music/
+										
+	install -m 0644 -o root -g root vulture/gamedata/sound/*.ogg \
+	  debian/vulture-data/usr/share/games/vulture/sound/
+										
+	install -m 0644 -o root -g root vulture/gamedata/fonts/* \
+	  debian/vulture-data/usr/share/games/vulture/fonts/
+
+	install -m 644 -o root -g root vulture/gamedata/manual/*.* \
+	  debian/vulture-data/usr/share/doc/vulture/manual/
+
+	install -m 644 -o root -g root vulture/gamedata/manual/img/* \
+	  debian/vulture-data/usr/share/doc/vulture/manual/img/
+	
+	# Symlink all files just installed to /usr/lib so that vulture,
+	# which has not been modified to look in /usr/share for any of its
+	# files, will still find them. This symlinking is easier than
+	# actually patching the source, since vulture expects to find
+	# all its support files in one directory.
+
+	for x in debian/vulture-data/usr/share/games/vulture/*; do \
+		ln -s /usr/share/games/vulture/`basename $$x` \
+		debian/vulture-data/usr/lib/games/vulture-nethack/; \
+		ln -s /usr/share/games/vulture/`basename $$x` \
